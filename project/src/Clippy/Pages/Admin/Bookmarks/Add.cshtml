@page
@model Clippy.Pages.Admin.Bookmarks.AddModel
@{
    ViewData["Title"] = "Add Bookmark";
}

<div id="main">

    <section id="one">
        <div class="inner">
            <header class="major">
                <h1>Add Bookmark</h1>
            </header>
            <form method="post">
                <div asp-validation-summary="All"></div>
                <div class="fields">
                    <div class="field">
                        <label asp-for="BookmarkEntity.Title">Title</label>
                        <input type="text" asp-for="BookmarkEntity.Title" />
                        <span asp-validation-for="BookmarkEntity.Title"></span>
                    </div>
                    <div class="field">
                        <label asp-for="BookmarkEntity.Description">Description</label>
                        <input type="text" asp-for="BookmarkEntity.Description" />
                        <span asp-validation-for="BookmarkEntity.Description"></span>
                    </div>
                    <div class="field">
                        <input type="checkbox" asp-for="BookmarkEntity.IsPublic">
                        <label asp-for="BookmarkEntity.IsPublic">Public</label>
                        <span asp-validation-for="BookmarkEntity.IsPublic"></span>
                    </div>
                    <div class="field">
                        <input type="checkbox" asp-for="BookmarkEntity.IsFavorite">
                        <label asp-for="BookmarkEntity.IsFavorite">Favorite</label>
                        <span asp-validation-for="BookmarkEntity.IsFavorite"></span>
                    </div>
                    <div class="field">
                        <label asp-for="BookmarkEntity.ResourceId">Resource</label>
                        <select asp-for="BookmarkEntity.ResourceId" asp-items="Model.Resources"></select>
                        <span asp-validation-for="BookmarkEntity.ResourceId"></span>
                    </div>
                    <div class="field">
                        <label asp-for="BookmarkEntity.Tags">Tags</label>
                        <input type="text" asp-for="BookmarkEntity.Tags" />
                        <span class="hint">Enter a comma separated list of tags</span>
                        <span asp-validation-for="BookmarkEntity.Tags"></span>
                    </div>
                    <div class="field">
                        <label asp-for="BookmarkEntity.UserId">User</label>
                        <select asp-for="BookmarkEntity.UserId" asp-items="Model.Users"></select>
                        <span asp-validation-for="BookmarkEntity.UserId"></span>
                    </div>
                </div>
                <ul class="actions">
                    <li><input type="submit" value="Add Bookmark" class="primary" /></li>
                    <li><a asp-page="Index" class="button">Back</a></li>
                </ul>
            </form>
        </div>
    </section>

</div>
