@page
@model Clippy.Pages.Admin.Users.ImportModel
@{
    ViewData["Title"] = "Import Users";
}

<div id="main">

    <section id="one">
        <div class="inner">
            <header class="major">
                <h1>Import Users</h1>
            </header>
            <form method="post">
                <div asp-validation-summary="All"></div>
                <div class="fields">
                    <div class="field">
                        <label for="name">JSON (<a id="addSample" class="sample-link">View Sample</a>)</label>
                        <textarea asp-for="Json" class="json-import"></textarea>
                        <span class="hint">Enter a JSON array of users.</span>
                    </div>
                </div>
                <ul class="actions">
                    <li><input type="submit" value="Import Users" class="primary" /></li>
                    <li><a asp-page="Index" class="button">Back</a></li>
                </ul>
            </form>
        </div>
    </section>

</div>

